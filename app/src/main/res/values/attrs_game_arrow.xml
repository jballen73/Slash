<resources>
    <declare-styleable name="GameArrow">
        <attr name="color" format="color" />
        <attr name="arrowDirection" format="enum">
            <enum name="right" value="0" />
            <enum name="upRight" value="1" />
            <enum name="up" value="2" />
            <enum name="upLeft" value="3" />
            <enum name="left" value="4" />
            <enum name="downLeft" value="5" />
            <enum name="down" value="6" />
            <enum name="downRight" value="7" />
            <enum name="none" value="8" />
        </attr>
    </declare-styleable>
</resources>
